        .tooltip {
            position: relative;
            display: inline-block;
            cursor: pointer;
            color: #0066cc;
        }

        .tooltip .tooltip-text {
            visibility: hidden;
            width: 180px;
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 8px;
            border-radius: 5px;

            /* Positioning */
            position: absolute;
            bottom: 125%;
            left: 50%;
            transform: translateX(-50%);
            z-index: 1;
        }

        /* Show tooltip on hover */
        .tooltip:hover .tooltip-text {
            visibility: visible;
        }
    </style>
